# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET        /                      controllers.HomeController.about()

GET        /players               controllers.HomeController.viewPlayers()
GET        /about                 controllers.HomeController.about()

GET        /questions             controllers.HomeController.startQuestions()
GET        /start                 controllers.HomeController.start()
GET        /onAnswerChosen        controllers.HomeController.onAnswerChosen(position :Int)

GET         /assets/javascripts/routes      controllers.HomeController.javascriptRoutes
GET         /websocket    controllers.HomeController.socket

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
GET  /service-worker.js controllers.Assets.at(path="/public", file="javascripts/service-worker.js")
GET  /manifest.json     controllers.Assets.at(path="/public", file="manifest.json")
GET  /sw.js             controllers.Assets.at(path="/public", file="javascripts/sw.js")
GET  /offline.html      controllers.HomeController.offline()
